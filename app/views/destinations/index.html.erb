<div class="columns">
  <div class="column">
    <h3 class=""> Destinations and associated projects </h3>
  </div>
</div>
<div id="destination-content" class="container">
  <div class="container">
    <% @destinations.each do |des| %>
      <div class="box">
        <h4 class="title"> <span> <%= des.name %>  <small><%= des.country_code %></small> </span> </h4>
        <% des.projects.each do |project| %>
          <div class="columns">
            <div class="column">
              <h6> Name: <%= project.name %> </h6>
              <%= react_component("ClickToViewMore", { content: project.description }) %>
            </div>
          </div>
        <% end %>

        <div class="columns card">
          <div class="column">
            <%= react_component("WhoGoToThisDestination", { destination_id: des.id, url: "/api/users_to_destination" }) %>
          </div>
          <div class="column">
            <a class="button is-info is-outlined" href="<%= "https://maps.google.com?q=#{des.name}"%>" target="_blank"> View it on Googlemap</a>
          </div>
        </div>
      </div>
    <% end %>
    <hr>
  </div>
</div>

